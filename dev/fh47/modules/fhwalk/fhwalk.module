/**
 * Process email form to organiser
 * use forward.module 
 * 
 * @ingroup fhsignup_admin
 */
function fhwalk_contact_email_submit($form_id, $form_values) {

  // Set recipient
  $sql = "SELECT DISTINCT u.mail FROM {node} n " . 
    "JOIN {users} u ON u.uid=n.uid " .
    "WHERE n.nid=%d";
  $recipient = db_result(db_query($sql, $form_values['nid']));

  // Set subject  
  if($form_values['subject']<>'') {
    $subject = $form_values['subject'];
  } else {
    $subject = "Request info for walk '" .  $form_values['title'] . "'";
  }

  // Set vars for theming
  $vars = array(
	  'forward_header_image' => variable_get('forward_header_image', ''),
	  'site_name' => variable_get('site_name', 'Drupal'),
	  'yemail'    => $form_values['yemail'],
	  'forward_message' => t('%username request info.', array('%username' => $form_values['yname']) ),
	  'message'  =>  check_markup($form_values['content']),
	  'base_url' => $base_url,
	  'link'     => l(t('Request info for %title', array('%title' => $form_values['title'])), 'node/'.$form_values['nid'],NULL,NULL,NULL,TRUE),
	  'dynamic_content'   => '',
	  'forward_ad_footer' => variable_get('forward_ad_footer', ''),
	  'forward_footer'    => variable_get('fhsignup_email_footer', '')
  );

  // Theming body
  $body = theme('email_message', $vars);
    
  // Enqueue emails
  module_invoke('fhmail', 'send', $recipient, $form_values['yemail'], $subject, $body);

  drupal_set_message(t('Message sent to organiser.'));
}

