/**
 * Create banner png
 *
 * font 5 -> max 20 chars
 * font 4 -> max 22 chars
 * font 3 -> max 25 chars
 * font 2 -> max 30 chars
 **/ 
function fhwalk_banner($nid) {
  $file_banner = "banner_$nid.png";
  $file_banner_path = file_check_location('files/banner/' . $file_banner);
  
  if(is_file($file_banner_path )) {
    $dest_img = imagecreatefrompng($file_banner_path);
  } else {
    $node = node_load($nid);
    $file_empty_path = drupal_get_path('module', $node->type) . '/banner_empty.png';
    $dest_img = imagecreatefrompng($file_empty_path);
    $font_color = imagecolorallocate($dest_img, 0x00, 0x66, 0x99);
    $text = $node->location['city'] .  ', ' .  fhlocation_get_iso3166_list($node->location['country']);
    $len = strlen($text);
    if ($len<=20) {
      $font_size = 5;
      $x = (20-$len) * 90 / 20;
    } elseif($len<=22) {
      $font_size = 4;
      $x = (22-$len) * 90 / 22;
    } elseif($len<=25) {
      $font_size = 3;
      $x = (25-$len) * 90 / 25;
    } elseif($len<=30) {
      $font_size = 2;
      $x = (30-$len) * 90 / 30;
    } else {
      $font_size = 1;
      $x = 0;
    }
    imagestring ( $dest_img, $font_size, $x, 80, $text , $font_color );
    imagepng($dest_img, $file_banner_path);
  }

  header('Content-type: image/png');
  imagepng($dest_img);
}

