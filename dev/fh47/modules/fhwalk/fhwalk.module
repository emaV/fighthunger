/**
 * contact_walker
 * Permission for email using contact.module:
 *                 to:  
 * from:           W   O   C   A 
 * Walker          -  (1)  -   -
 * Organiser       y   -   y   -
 * Coordinator     -   y   -   -
 * Administrator   -   y   y   - 
 *                (1) via walk page
 *                 
 * @ingroup fhsignup_helpers
 * 
 * @param $account (mail to)
 * @param $user    (mail from)
 * @return true or false
 */
function fhwalk_contact_access($account) {
global $user;
  
  // permission for organisers (ONLY to their walkers)
  $sql = "SELECT gs.uid FROM {gathering_node} gn " .
    "JOIN {node} n ON gn.nid = n.nid " .
    "JOIN {gathering_signup} gs ON gn.nid = gs.wid " .
    "WHERE n.uid=%d AND gs.uid=%d";
  if (db_result(db_query($sql, $user->uid, $account->uid))) return true;

  // permission for coordinator (ONLY to their organisers)
  if (user_access('coordinate walks')) {
    $sql = "SELECT n.uid FROM {gathering_node} gn " . 
      "JOIN {node} n ON gn.nid = n.nid  " . 
      "WHERE gn.cid=%d AND n.uid=%d";
    if (db_result(db_query($sql, $user->uid, $account->uid))) return true;
  }
  
  // permission for administrator (all organiser and coordinators)
  if (user_access('administer walks')) {
    // all organisers
    $sql = "SELECT n.uid FROM {gathering_node} gn " . 
      "JOIN {node} n ON gn.nid = n.nid  " . 
      "WHERE n.uid=%d";
    if (db_result(db_query($sql, $account->uid))) return true;
    // all coordinators
    $sql = "SELECT gn.cid FROM {gathering_node} gn " . 
      "WHERE gn.cid=%d";
    if (db_result(db_query($sql, $account->uid))) return true;
  }
  
  return false;
}

/**
 * Implementation of hook_access().
 *  
 * @ingroup fhwalk_core
 */
function fhwalk_access($op, $node) {
  global $user;
  
  switch ($op) {
    case 'create':
      return (  user_access('administer walks') || 
                user_access('coordinate walks') ||
                user_access('create multiple walks') ||
                (user_access('create walk') && _fhwalk_user_can_create($user->uid, isset($node->camid) ? $node->camid : NULL))
              );
      break;
    case 'update':
      return (user_access('administer walks')    || 
              fhwalk_access('coordinate', $node) ||
              ($user->uid == $node->uid));
      break;
    case 'delete':
      return (user_access('administer walks') || 
              fhwalk_access('coordinate', $node) ||
              ($user->uid == $node->uid));
      break;
    case 'view':
      return TRUE;
      break;
    case 'merge':
      return (user_access('administer walks') || 
              fhwalk_access('coordinate', $node) );
      break;
    case 'coordinate':
      return user_access('coordinate walks') && ($node->cid == $user->uid);
      break;
  }
}

