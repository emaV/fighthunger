/**
 * Implementation of hook_settings().
 *  
 * @ingroup fhwalk_core
 */
function fhwalk_settings() {
  
  $term_options = array();
  $vocabularies = taxonomy_get_vocabularies('fhwalk');

  foreach($vocabularies as $voc) {
    $voc_options[$voc->vid] = "$voc->name";
  }  
  $form['fhwalk_vocabulary'] = array(
    '#type' => 'radios', 
    '#title' => t('fhwalk vocabulary'),
    '#default_value' => variable_get('fhwalk_vocabulary', 0),
    '#options' => $voc_options
  );
  $node->type = 'fhwalk';
  foreach (module_implements('nodeapi') as $name) {
    $function = $name .'_nodeapi';
    $form_add = $function($node, 'fh_settings', NULL, NULL);
    if($form_add) {
      $form[$name] = array(
        '#type' => 'fieldset', 
        '#title' => t('Settings') . ": <b>$name</b>",
        '#collapsible' => TRUE,
        '#collapsed' => TRUE,
      );
      $form[$name][] = $form_add;
    }
